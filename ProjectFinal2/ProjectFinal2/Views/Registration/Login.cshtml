@model ProjectFinal2.ViewModels.Login

@{
    Layout = "_MyLayout";
    ViewData["Title"] = "Login";
}
<!doctype html>
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="/css/styleR.css">

</head>
<body>

	<div class=" container justify-content-center p-5 " style=" background-color:#DFEBFF; border-radius:25px">

    <div class="row ">


			<div class=" col-7 " style="background:url('/Image/Home photo.png') no-repeat scroll center 0/cover;">
						<div  ></div>
                    </div>
					<div class="login-wrap col-5 p-4 p-md-5">
						<div class="d-flex">
							<div class="w-100">
								<h3 class="mb-4">Sign In</h3>
							</div>

						</div>
						<form asp-action="Login" asp-controller="Registration" class="signin-form">
							<div asp-validation-summary="All" class="text-danger"></div>
							<div class="form-group mb-3">
								<label class="label" asp-for="Email"></label>
								<input class="form-control" asp-for="Email" />
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
							<div class="form-group mb-3">
								<label class="label" asp-for="Password"></label>
								<input type="password" class="form-control" asp-for="Password" />
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<div class="form-group">
								<input type="submit" value="Login" class="form-control btn btn-primary rounded submit px-3" />

							</div>
							<div class="form-group d-md-flex">
								<div class="w-50 text-left">
									<label class="checkbox-wrap checkbox-primary mb-0">
										Remember Me
										<input type="checkbox" checked>
										<span class="checkmark text-dark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="/Registration/Register">Create Account</a>
								</div>
							</div>
						</form>
					</div>
			
		
		</div>

	</div>
	<script src="/js/jqueryR.min.js"></script>
	<script src="/js/popperR.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/mainR.js"></script>

</body>
</html>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


